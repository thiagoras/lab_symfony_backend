{% extends 'base.html.twig' %}

{% block title %}Hello DocumentoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div class="example-wrapper">
    <h1>Documentos</h1>
    <p><a href="/documento/novo">Novo</a></p>
    <table style="border:1px">
        <tr>
            <th>ID</th>
            <th>Número</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    
    {% for documento in documentos %}
        <tr>
            <td>{{documento.id}}</td>
            <td>{{documento.numero}}</td>
            <td>{{documento.descricao}}</td>
            <td>
                <a href="/documento/{{documento.id}}">Visualizar</a> 
                <a href="/documento/alterar/{{documento.id}}">Alterar</a> 
                <a href="/documento/remover/{{documento.id}}">Excluir</a></li>
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}
